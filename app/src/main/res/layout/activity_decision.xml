<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border3"
    tools:context=".decision">

    <Button
        android:id="@+id/cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="137dp"
        android:layout_marginRight="137dp"
        android:background="#87ceeb"
        android:text="LogOut" />

    <ImageView
        android:id="@+id/camera"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_below="@+id/tv"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@+id/gallery"
        android:src="@drawable/index"
        android:text="CAMERA" />

    <ImageView
        android:id="@+id/hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hi7"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/gallery"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_below="@+id/tv"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/hi3"
        android:text="GALLERY" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        android:layout_marginTop="73dp"
        android:foregroundGravity="center"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="TextView"
        android:textColor="#25EBD5"
        android:textSize="25dp"
        android:textStyle="bold"
        app:fontFamily="@font/amita_bold" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="HOW DO YOU WANT TO SELECT THE IMAGE?"
        android:textColor="#5D0096"
        android:textColorHighlight="#00791515"
        android:textSize="24sp"
        app:fontFamily="@font/arima_madurai_bold" />
</RelativeLayout>