<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.amitshekhar.tflite.BlankFragment"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/ll1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewResult1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="2dp"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/textViewResults1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:fadeScrollbars="false"
                android:gravity="center"
                android:maxLines="15"
                android:scrollbars="vertical"
                android:textColor="@android:color/black" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_below="@id/ll1"
            android:id="@+id/ll2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewResult2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="2dp"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/textViewResults2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:fadeScrollbars="false"
                android:gravity="center"
                android:maxLines="15"
                android:scrollbars="vertical"
                android:textColor="@android:color/black" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_below="@id/ll2"
            android:id="@+id/ll3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewResult3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="2dp"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/textViewResults3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:fadeScrollbars="false"
                android:gravity="center"
                android:maxLines="15"
                android:scrollbars="vertical"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
